@model IEnumerable<CloudPOE2.Models.Order>

<div class="container mt-5">
    <h1 class="text-center mb-4">Order List</h1>

    <div class="text-right mb-3">
        <a href="@Url.Action("Register", "Order")" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Add New Order
        </a>
    </div>

    <table class="table table-hover table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Customer ID</th>
                <th scope="col">Product ID</th>
                <th scope="col">Order Date</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Customer_ID</td>
                        <td>@order.Product_ID</td>
                        <td>@order.Order_Date.ToString("MM/dd/yyyy")</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">No orders found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

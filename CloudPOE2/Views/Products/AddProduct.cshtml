@model CloudPOE2.Models.Product

<div class="container mt-5">
    <h2 class="text-center mb-4">Add a New Product</h2>

    <!-- Display validation summary -->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <form asp-action="AddProduct" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="Product_Name">Product Name</label>
            <input type="text" id="Product_Name" name="Product_Name" class="form-control" required />
            <span asp-validation-for="Product_Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Description">Description</label>
            <textarea id="Description" name="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Category">Category</label>
            <input type="text" id="Category" name="Category" class="form-control" />
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Price">Price</label>
            <input type="number" id="Price" name="Price" class="form-control" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="file">Upload Image</label>
            <input type="file" id="file" name="file" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary btn-block">Add Product</button>
    </form>
</div>

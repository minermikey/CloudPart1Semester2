@model IEnumerable<CloudPOE2.Models.Customer>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Customers</h1>
            <p class="text-center">
                <a href="@Url.Action("Create")" class="btn btn-success btn-lg">
                    <i class="fas fa-user-plus"></i> Add New Customer
                </a>
            </p>
            <table class="table table-striped table-hover mt-4">
                <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model)
                    {
                        <tr>
                            <td>@customer.Customer_Name</td>
                            <td>@customer.email</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("Edit", new { partitionKey = customer.PartitionKey, rowKey = customer.RowKey })" class="btn btn-warning">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form asp-action="Delete" method="post" class="d-inline">
                                        <input type="hidden" name="partitionKey" value="@customer.PartitionKey" />
                                        <input type="hidden" name="rowKey" value="@customer.RowKey" />
                                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this Customer?');">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
